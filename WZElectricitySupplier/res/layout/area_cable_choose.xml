<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="5dp"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/AreaCableHideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_selector_arrow_down"
        android:contentDescription="@string/app_name"
        android:translationY="1px" 
        android:visibility="gone"/>

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AreaCableHideBtn"
        android:background="@drawable/bg_cable_icon_choose_area"
	    android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/ChooseLineOneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_checked_icon_lo"
            android:button="@color/transparent"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/ChooseLineTwoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_checked_icon_lt"
            android:button="@color/transparent"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/ChooseLineFourBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_checked_icon_lf"
            android:button="@color/transparent"
            android:contentDescription="@string/app_name" />
    </RadioGroup>

</RelativeLayout>