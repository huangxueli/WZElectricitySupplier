<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <TableLayout
        android:id="@+id/table3_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/table_row_blue"
        android:padding="2dp" >

        <TableRow>

            <TextView
                style="@style/table_theme_textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="监管时限" />
        </TableRow>

        <TableRow android:layout_marginTop="1dp" 
            android:id="@+id/table3_title"
           	android:visibility="gone">

            <TextView
                style="@style/table_theme_textview_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="业务名称" />

            <TextView
                style="@style/table_theme_textview_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="检查人" />


            <TextView
                style="@style/table_theme_textview_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="检查时间" />

            <TextView
                style="@style/table_theme_textview_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="创建时间" />

            <TextView
                style="@style/table_theme_textview_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="剩余天数" />
        </TableRow>

        <TableRow android:layout_marginTop="1dp" 
            android:id="@+id/table3_complex_name">

			<TextView
               
               style="@style/table_theme_textview_edittext2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/white"
               android:gravity="center_horizontal"
               android:layout_marginRight="0dp"
               android:text="该项目没有正在执行的处罚流程" />
		</TableRow>
    </TableLayout>

</ScrollView>