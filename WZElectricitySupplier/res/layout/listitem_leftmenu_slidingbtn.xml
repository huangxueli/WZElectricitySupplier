<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_item_n"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/menu_list_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:drawableLeft="@drawable/function"
        android:drawablePadding="15dp"
        android:textColor="@color/custom_bule"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.ab.view.sliding.AbSlidingButton
            android:id="@+id/slider_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip" 
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">
        </com.ab.view.sliding.AbSlidingButton>
    </RelativeLayout>

</LinearLayout>
